---
version: "3.8"
services:
  plex:
    image: lscr.io/linuxserver/plex:latest
    container_name: plex
    networks:
      - infrastructure_frontend  
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Pacific/Honolulu
      - VERSION=docker
      - PLEX_CLAIM= #optional
    volumes:
      - config:/config
      - entertainment/tv:/tv
      - entertainment/movies:/movies
    restart: unless-stopped

volumes:
  config:
    driver: local
    driver_opts:
      type: nfs
      o: "addr=192.168.1.11,rw,noatime,rsize=8192,wsize=8192,tcp,timeo=14,nfsvers=4"
      device: ":/volume1/docker/plex/config"
  entertainment:
    driver: local
    driver_opts:
      type: nfs
      o: "addr=192.168.1.11,rw,noatime,rsize=8192,wsize=8192,tcp,timeo=14,nfsvers=4"
      device: ":/volume1/docker/entertainment" 

networks:
  infrastructure_frontend:
    external: true
    name: infrastructure_frontend       